                                    <Button Grid.Row="2" Style="{DynamicResource ButtonStyle}"/>
                                    <Button Grid.Row="3" Style="{DynamicResource ButtonStyle}"/>
                                    <Button Grid.Row="4" Style="{DynamicResource ButtonStyle}"/>
